<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="tests/bootstrap.php"
>
    <testsuites>
        <testsuite name="marenkay-remarkable Test Suite">
            <directory>./tests/marenkay/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src/marenkay/</directory>
            <exclude>
                <directory>./src/marenkay/*/resources</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
